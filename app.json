{


  
  "expo": {
    "name": "Filetül Barkod Sorgulama",
    "slug": "filetul",
    "version": "1.0.9",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "plugins": [ 
      [
        "expo-image-picker",
        {
          "photosPermission": "Kartvizit yüklemesi için gereken galeri izni"
        }
      ]
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.filetul.barkod",
      "supportsTablet": true , 
      "infoPlist": {
        "NSCameraUsageDescription": "Barkod Taramak İçin Kamera İzni Vermeniz Gerekmektedir."
      }
    },
    "android": {
      "package": "com.filetul.barkod",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [ "CAMERA", "WRITE_EXTERNAL_STORAGE", "CAMERA_ROLL" ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}

